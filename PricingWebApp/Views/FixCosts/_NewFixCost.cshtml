@model FixCosts

<div class="modal fade" id="addone">
  <div class="modal-dialog">
    <div class="modal-content"> 
      <div class="modal-header">
          <h5 class="modal-title">Add New Fix Cost</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
          </button>
      </div>

  <form method="post" asp-action="_NewFixCost" >
      
      <div class="border p-3 bt-4">           
        <div class="mb-3">
            <label asp-for="Title" >Fix Cost Name</label>
            <input asp-for="Title" class="form-control" autocomplete="off" value="@ViewBag.FixCostName">
            <span asp-validation-for="Title" class="text-danger">@TempData["Error"]</span>
        </div>
        <div class="mb-3">
            <label asp-for="Cost"></label>
            <input asp-for="Cost" class="form-control" autocomplete="off" value="@ViewBag.Cost" >
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div> 
        <br>
        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    </div>
       
  </form>
      
    </div>
  </div>
</div>

