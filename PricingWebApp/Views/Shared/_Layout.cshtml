    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

        });
        onload = function () {
            const links = document.querySelectorAll('ul[id = "nav_sidebar"] li a');
            const myLis = document.querySelectorAll('ul[id = "nav_sidebar"] li');
            const myLisSon = document.querySelectorAll('ul[id = "nav_sidebar"] li ul li a');
            const MyPageTitleLeft = document.getElementById("MyPageTitleLeft");
            links.forEach(link => {
                if (link.getAttribute('href') == location.pathname) {
                    link.classList.add("active");
                } else {
                    link.classList.remove("active");
                }
            });
            myLis.forEach(liFather => {
                if (liFather.querySelectorAll("ul li").length > 0) {
                    liFather.querySelectorAll("ul li a").forEach(li => {
                        if (li.classList.contains("active")) {
                            liFather.querySelector("a").classList.add("active");
                            liFather.classList = "nav-item menu-is-opening menu-open";
                        }
                    });
                }
            });
            showOrHiddenSidebarBtn();
            
            if (location.pathname == "/PricingCalculationPage/CalculationPage"){
               MyPageTitleLeft.style.display = "none";
            }else{
                MyPageTitleLeft.style.display = "block";
            }
        }
        window.addEventListener('resize', showOrHiddenSidebarBtn);
        function showOrHiddenSidebarBtn() {
            if (window.innerWidth >= 992) {
                const myNavBar = document.querySelector('#MyNavBarBtnToOpenOrCloseSidebar')
                myNavBar.style.display = "none";
            } else {
                const myNavBar = document.querySelector('#MyNavBarBtnToOpenOrCloseSidebar')
                myNavBar.style.display = "block";
            }
        }
        const searchInput = document.querySelector('#sidebarSearchBtn div input[type="search"]');
        searchInput.addEventListener('keyup', myserachSidebarBtnWrite);

        function myserachSidebarBtn() {
            const searchBtn = document.querySelector("#sidebarSearchBtn i");

            if (searchInput.value.length < 3) {
                searchInput.value = "";
                searchBtn.classList = "bi bi-search";
                searchBtn.click();
            } else {
                searchInput.value = "";
                searchBtn.classList = "bi bi-search";
            }
        }
        function myserachSidebarBtnWrite() {
            const searchBtn = document.querySelector("#sidebarSearchBtn i");
            if (searchInput.value != "") {
                searchBtn.classList = "bi bi-x-lg";
            } else {
                searchBtn.classList = "bi bi-search";
            }
        }
    </script>
