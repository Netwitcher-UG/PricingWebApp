@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Net</b>Witcher</a>
        </div>

        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body" style="height: 400px; width: 400px;">
                <p class="login-box-msg">Sign in to start your session</p>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" aria-required="true" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" for="inputRememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>

                        <div class="col-4">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                    </div>

                    <div class="mt-3">
                        <p class="mb-1">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                       
                        <p class="mb-0">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <p class="mt-3 mb-1">Or sign in with:</p>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="social-auth-links text-center">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-block btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                    <i class="fab fa-@provider.Name"></i> @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
