@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
       

        .login-page {
            display: flex;
            align-items: center;
            justify-content: center;
            
            background-color: #f6f5f7;
        }

        .login-box {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
         
            background-color: #f6f5f7;
        }

        .login-logo a {
            color: dimgrey;
            font-size: 2rem;
            font-weight: bold;
        }

        .card {
            border: 10px;
            width: 30vw;
            
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        }

        .login-card-body {
            padding:10px 30px;

            padding-bottom:60px;
        }

        .input-group-prepend .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
        }

        .btn-primary2 {
            background-color: #007bff;
            border: none;
            line-height:25px;
            border-radius: 5px;
            color: #fff;
            white-space: nowrap;
        }

        .mt-3 a {
            color: #007bff;
        }

        
        #login-submit{
            width:90px;
        }
        @@media (max-width: 1300px) {
           #login-submit, #mySignInRememberMe, #forgot-password {
            font-size:13px !important;
        }
        #account input{
            font-size:13px !important;
        }
        #myLogosBottomPage img{
            width:180px !important;
        }
        
        }
        @@media (max-width: 1200px) {
           #login-submit, #mySignInRememberMe, #forgot-password {
            font-size:12px !important;
            } 
            #account input{
                font-size:12px !important;
            }
            #myLogosBottomPage img{
            width:160px !important;
        }
        .login-page .login-box .card{
            width:40vw !important;
        }
        }
        @@media (max-width: 1100px) {
           #login-submit, #mySignInRememberMe, #forgot-password {
            font-size:11px !important;
            }
            #account input{
                font-size:11px !important;
            }
            #myLogosBottomPage img{
            width:140px !important;
        }
        .login-page .login-box .card{
            width:50vw !important;
        }
        }
        @@media (max-width: 900px) {
           .myLognInHead img{
               width:40px !important;
           }
           .myLognInHead span{
               font-size:12px !important;
           }
           .login-logo img{
               width:150px !important;
               
           }
           .login-card-body > p{
               font-size:12px !important;
           }
           #myLogosBottomPage img{
            width:120px !important;
        }
        .login-page .login-box .card{
            width:60vw !important;
        }
        }
        @@media (max-width: 700px) {
           .myLognInHead img{
               width:30px !important;
           }
           .myLognInHead span{
               font-size:11px !important;
           }
           .login-logo img{
               width:120px !important;
               
           }
           .login-card-body > p{
               font-size:11px !important;
           }
           #myLogosBottomPage img{
            width:100px !important;
        }
        .login-page .login-box .card{
            width:65vw !important;
        }
        }
        @@media (max-width: 600px) {
            #myLogosBottomPage img{
            display:none;
        }
        .login-page .login-box .card{
            width:90vw !important;
        }
        .login-page{
            padding-top:0 !important;
        }
        }
        @@media only screen and (max-height: 700px) {
          
        .login-logo img{
               width:150px !important;
               
           }
           .login-page{
            padding-top:30px !important;
        }
        .login-page .login-box .card{
            height:90vh;
        }
        }
        @@media only screen and (max-height: 500px) {
         
        .login-logo img{
               width:100px !important;
               
           }
            .login-page{
            padding-top:20px !important;
        }
        #myLogosBottomPage img{
            display:none;
        }
        .login-page .login-box .card{
            height:90vh;
        }
        }
        @@media only screen and (max-height: 400px) {
          
        .login-logo img{
               width:50px !important;
               
           }
            .login-page{
            padding-top:10px !important;
        }
        #myLogosBottomPage img{
            display:none;
        }
        .login-page .login-box .card{
            height:90vh;
        }
        }
        @@media only screen and (max-height: 333px) {
            .login-logo img{
               display:none;
               
           }
        }
    </style>
</head>


    <div class="login-page" style="padding-top:50px;">
        <div class="login-box">
            

            <div class="card">
                
               
                <div class="flex-column justify-content-center align-items-center text-center myLognInHead" style="padding-top:20px;">
                    <img src="~/dist/img/Pricing_WebApp_Logo.png" alt="NetWitcherLTE Logo"
                         class="  " style="opacity: .8; width:50px">
                
                    <span class="brand-text font-weight-light" style="padding-left:10px;font-weight:bolder !important;">Pricing Web App</span>
                </div>

                <div class="card-body login-card-body">
                    <p class="login-box-msg">Sign in to start your session</p>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" autocomplete="current-password" aria-required="true" />
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        
                        <p class="login-box-msg">     </p>

                        <div class="" style="display:flex ;justify-content:space-between;flex-wrap: wrap;">
                            
                                <div class="icheck-primary">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" id="mySignInRememberMe" for="inputRememberMe">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            

                            <div class="">
                                <button id="login-submit" type="submit" class="btn btn-primary2">Sign In</button>
                            </div>
                        </div>

                        <div class="mt-3">
                            <p class="mb-1">
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                          
                          

                        </div>
                    </form>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <p class="mt-3 mb-1">Or sign in with:</p>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="social-auth-links text-center">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-block btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        <i class="fab fa-@provider.Name"></i> @provider.DisplayName
                                    </button>
                                }
                            </div>

                        </form>
                         
                    }


                </div>
                <div class="login-logo">
                    <img src="/images/logo1.png" alt="Logo" class="img-fluid" style="width:200px; " />
                </div>
            </div>
        </div>
        
    </div>
    <div style="position:absolute; bottom: 0;width:100vw">
           <div class="" style="width:100vw;display:flex ;justify-content:space-between;" id="myLogosBottomPage">
                        <img src="~/dist/img/Dein_Abschnittstext_(1).png" alt="NetWitcherLTE Logo"
                             style="opacity: .8; width:200px">
                    <img src="~/dist/img/Dein_Abschnittstext_(2).png" alt="NetWitcherLTE Logo"
                             style="opacity: .8; width:200px">
           </div> 
       </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        const myLoginTitle = document.getElementById("MyPageTitleLeft");
        if(location.pathname == "/Identity/Account/Login"){
            myLoginTitle.style.display = "none";
        }
        
    </script>



