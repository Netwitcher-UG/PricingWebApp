@page
@model RegisterModel
@{
    ViewData["Title"] = "Add User";
}




    <style>
        body {
            background-color: #f6f5f7;
            font-family: 'Arial', sans-serif;
        }

        

        .login-page {
            display: flex;
            align-items: center;
            justify-content: center;
            
            background-color: #f6f5f7;
            
        }

        .login-box, .register-box {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 400px;
            margin-top: 0px; /* Adjusted margin-top */
        }

        .login-logo, .register-logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .login-logo a, .register-logo a {
                color: dimgrey;
                font-size: 2rem;
                font-weight: bold;
            }

        

        .form-floating {
            margin-bottom: 20px;
        }

            .form-floating input {
                width: 100%;
                padding: 10px;
                box-sizing: border-box;
                border: 1px solid #ced4da;
                border-radius: 5px;
                font-size: 16px;
            }

            .form-floating label {
                font-size: 14px;
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            color: #fff;
        }
        @@media only screen and (max-width: 420px) {
         .container .login-page .register-box{
             width:90vw !important;
         }
        
        }
        @@media only screen and (min-height: 600px) {
         .login-page{
             height: 65vh;
         }
        
        }
        @@media only screen and (max-height: 600px) {
         .container .login-page .register-box .form-container{
             
             font-size:10px !important;
         }
         .register-logo img{
             width:150px !important;
         }
         body {
             overflow-y: scroll !important;
             
         }
        
        }
        @@media only screen and (max-height: 400px){
            .container{
               margin-top:150px;
               margin-bottom:200px
            }
        }
    </style>



    <div class="container">
        <div class="login-page">
            <div class="register-box">
                <div class="register-logo">
                    <img src="/images/logo1.png" alt="Logo" class="img-fluid" style="width:260px;" />
                </div>
                <div class="form-container">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="btn btn-primary w-100">Add User</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>



