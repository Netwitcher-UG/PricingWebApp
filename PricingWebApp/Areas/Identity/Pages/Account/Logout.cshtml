@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h1 class="card-title">@ViewData["Title"]</h1>
                    </div>
                    <div class="card-body">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <p class="text-center">
                                    Are you sure you want to log out? Click the button below to proceed.
                                </p>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Logout</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            <p class="text-center">You have successfully logged out of the application.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
