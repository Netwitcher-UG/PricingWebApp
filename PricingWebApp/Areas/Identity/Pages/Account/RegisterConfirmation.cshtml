@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Add User confirmation";
}



@if (Model.DisplayConfirmAccountLink)
{
    <p>
        This app does not currently have a real email sender registered. You can configure a real email sender. Refer to <a href="https://aka.ms/aspaccountconf">these docs</a> for instructions.
        Normally, a confirmation link would be emailed to you. Click <a id="confirm-link" href="@Model.EmailConfirmationUrl">here</a> to confirm your account.
    </p>
}
else
{
    <p>
        Please check  email to confirm your account.
    </p>
}
